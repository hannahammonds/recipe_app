<h1>Recipe Listing Page</h1>

<table>
    <thead>
        <tr>
            <th>Name:</th>
            <th>Ingredients:</th>
            <th>Instructions:</th>
        </tr>
    </thead>

    <tbody>
        <% @recipes.each do |recipe| %>
        <tr>
            <td><%= recipe.name%></td>
            <td><%= recipe.ingredients%></td>
            <td><%= recipe.instructions%></td>
            <td><%= link_to 'Show', recipe_path(recipe) %> </td>
            <td><%= link_to 'Edit', edit_recipe_path(recipe) %> </td>
            <td><%= link_to 'Delete', recipe_path(recipe), method: :delete %> </td>
        </tr>
        <% end %>
    </tbody>
</table>
<td><%= link_to 'Create New Recipe', new_recipe_path %> </td>